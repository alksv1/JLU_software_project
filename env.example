# 数据库配置 (SQLite - 轻量级，无需安装数据库服务)
DATABASE_URL=sqlite:///./tabletennis.db

# 如果需要使用PostgreSQL，取消下面注释并注释上面的SQLite配置
# DATABASE_URL=postgresql://username:password@localhost:5432/tabletennis_db

# JWT配置
SECRET_KEY=your-secret-key-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# 支付配置
WECHAT_PAY_APP_ID=your-wechat-app-id
WECHAT_PAY_MCH_ID=your-wechat-mch-id
ALIPAY_APP_ID=your-alipay-app-id

# 许可证服务器配置
LICENSE_SERVER_URL=https://license.example.com
LICENSE_VALIDATION_KEY=your-license-validation-key
